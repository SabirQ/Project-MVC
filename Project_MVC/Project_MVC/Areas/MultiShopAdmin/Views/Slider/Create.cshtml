@model Slider
@{
    ViewData["Title"] = "Create";
}


<div class="main-panel">
    <h1>Create Slider</h1>
    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
    <form class="mt-3" method="post" enctype="multipart/form-data">
         <div>
        <label >Image:</label><br />
        <input asp-for="Photo" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Photo"></span>
    </div>
    
    <div>
        <label >Title:</label><br />
        <input asp-for="Title" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div>
        <label >Article:</label><br />
        <input asp-for="Article" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Article"></span>
    </div>
    <div>
        <label >Order:</label><br />
        <input asp-for="Order" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Order"></span>
    </div>
    <div class="mt-2">
        <button class="btn btn-success" type="submit">Create</button>
    </div>
</form>
</div>


