@model List<Discount>
@{
    ViewData["Title"] = "Index";
}
<div class="main-panel">
    <div>
        <a class="btn btn-success" asp-area="MultiShopAdmin" asp-controller="discount" asp-action="Create">Create new Discount</a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                     <th>
                        Value
                    </th>
                    <th>
                        Products
                    </th>
                   <th>
                       Settings
                    </th> 
                </tr>
            </thead>
            <tbody>
                @foreach (Discount discount in Model.OrderByDescending(p=>p.Id))
                {
                    <tr>

                        <td>
                            @discount.Id
                        </td>
                        <td>
                            @discount.Name
                        </td> 
                         <td>
                            @discount.Value
                        </td>
                        <td>
                            @discount.Products.Count
                        </td> 
                        <td >
                            <div class="d-flex">
                                 <div>
                                    <a asp-area="MultiShopAdmin" asp-controller="discount" asp-action="Update" asp-route-id="@discount.Id" class="btn btn-warning"><i class="mdi mdi-border-color"></i></a>
                                </div>
                                <div>
                                    <a class="btn btn-danger" asp-area="MultiShopAdmin" asp-controller="discount" asp-action="Delete" asp-route-id="@discount.Id"><i class="mdi mdi-delete"></i></a>
                                </div>
                                   <div>
                                    <a class="btn btn-primary" asp-area="MultiShopAdmin" asp-controller="Discount" asp-action="Detail" asp-route-id="@discount.Id"><i class="mdi mdi-open-in-new"></i></a>
                                </div>
                            </div> 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




