@model List<Order>
@{
    ViewData["Title"] = "Index";
}
<div class="main-panel">
    <div class="d-flex">
        <a class="btn btn-primary" asp-action="Index" asp-controller="add">Add</a>
        <a class="btn btn-primary" asp-action="Index" asp-controller="category">Category</a>
        <a class="btn btn-primary" asp-action="Index" asp-controller="color">Color</a>
        <a class="btn btn-primary" asp-action="Index" asp-controller="discount">Discount</a>
        <a class="btn btn-primary" asp-action="Index" asp-controller="product">Product</a>
        <a class="btn btn-primary" asp-action="Index" asp-controller="productinformation">ProductInformation</a>
        <a class="btn btn-primary" asp-action="Index" asp-controller="setting">Setting</a>
        <a class="btn btn-primary" asp-action="Index" asp-controller="size">Size</a>
        <a class="btn btn-primary" asp-action="Index" asp-controller="slider">Slider</a>
    </div>
    <div class="table-responsive pt-3">
        <h3>$@(ViewBag.TotalPrice!=null?ViewBag.TotalPrice:"0") :Total Sales</h3>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        TotalPrice
                    </th>
                    <th>
                        Date
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Order order in Model.OrderByDescending(p=>p.Id))
                {
                    <tr>
                        <td>
                            @order.Id
                        </td>
                        <td>
                            @order.TotalPrice
                        </td>    
                        <td >
                            @order.Date.ToString("dd/MMMM/yyyy")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


