@model Order
@{
    ViewData["Title"] = "Index";
}
   <!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" href="#">Home</a>
                    <a class="breadcrumb-item text-dark" href="#">Shop</a>
                    <span class="breadcrumb-item active">Checkout</span>
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->


    <!-- Checkout Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Billing Address</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="row">
                    <form method="post" enctype="multipart/form-data" style="width:100%">
                            <div class="col-md-6 form-group">
                            <label for="Phone">Mobile No</label>
                            <input asp-for="Phone" class="form-control" type="text" placeholder="+123 456 789">
                            <span class="text-danger" asp-validation-for="Phone"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="Address">Address</label>
                            <input asp-for="Address" class="form-control" type="text" placeholder="123 Street">
                            <span class="text-danger" asp-validation-for="Address"></span>
                        </div>
                     
                        <div class="col-md-6 form-group">
                            <label for="Country">Country</label>
                            <select asp-for="Country" class="custom-select">
                                <option selected>Azerbaijan</option>
                                <option >United States</option>
                                <option>Albania</option>
                                <option>Algeria</option>
                            </select>
                            <span class="text-danger" asp-validation-for="Country"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="City">City</label>
                            <input asp-for="City" class="form-control" type="text" placeholder="New York">
                            <span class="text-danger" asp-validation-for="City"></span>
                        </div>
                        <button type="submit" class="btn btn-block btn-primary font-weight-bold py-3">Place Order</button>
                    </form>
                    
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Order Total</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="border-bottom">
                        <h6 class="mb-3">Products</h6>
                        @foreach (BasketItem item in ViewBag.BasketItems)
                    {
                         <div class="d-flex justify-content-between">
                            <p>@item.Product.Name</p>
                             <p>@(item.Color.Name+","+item.Size.Name)</p>
                            <p>$@(item.Price+" x "+item.Quantity)</p>
                             <p>$@(item.Price*item.Quantity)</p>
                        </div>
                    }
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Total</h5>
                            <h5>$@ViewBag.TotalPrice</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Checkout End -->

