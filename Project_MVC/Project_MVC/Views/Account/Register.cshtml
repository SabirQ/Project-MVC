
@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                      <h4><a asp-controller="Home" asp-action="Index">Home</a> / Register</h4><br />
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Register Page</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 pt-5 pt-lg-0">
                <form method="post">
                  <div class="login-form">
                    <h4 class="login-title">Register</h4>
                    <div class="row">
                      <div class="col-md-6 col-12">
                        <label>First Name</label><br />
                        <input asp-for="Firstname" placeholder="First Name" /><br />
                        <span class="text text-danger" asp-validation-for="Firstname"></span>
                      </div>
                      <div class="col-md-6 col-12">
                        <label>Last Name</label><br />
                        <input asp-for="Lastname"  placeholder="Last Name" /><br />
                        <span class="text text-danger" asp-validation-for="Lastname"></span>
                      </div>
                      <div class="col-md-12">
                        <label>Username</label><br />
                        <input asp-for="Username" placeholder="Username" /><br />
                        <span class="text text-danger" asp-validation-for="Username"></span>
                      </div>
                      <div class="col-md-12">
                        <label>Email Address</label><br />
                        <input asp-for="Email" placeholder="Email Address" /><br />
                        <span class="text text-danger" asp-validation-for="Email"></span>
                      </div>
                      <div class="col-md-6">
                        <label>Password</label><br />
                        <input asp-for="Password" placeholder="Password" /><br />
                        <span class="text text-danger" asp-validation-for="Password"></span>
                      </div>
                      <div class="col-md-6">
                        <label>Confirm Password</label>
                        <input asp-for="ConfirmPassword" placeholder="Confirm Password" /><br />
                        <span class="text text-danger" asp-validation-for="ConfirmPassword"></span>
                      </div>
                      <div class="col-md-6">
                        <input asp-for="TermsApplied" />
                        <label>Terms</label><br/>
                        <span class="text text-danger" asp-validation-for="TermsApplied"></span>
                      </div>
                      <div class="col-12">
                        <button type="submit" class="btn btn-custom-size lg-size btn-primary">
                          Register
                        </button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
        </div>
    </div>
</main>

