
@{
    ViewData["Title"] = "Wishlist";
}

  <!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" asp-controller="home" asp-action="index">Home</a>
                    <span class="breadcrumb-item active">Wishlist</span>
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->


    <!-- Cart Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-12 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Products</th>
                            <th>Price</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (ViewBag.WishlistItems!=null)
                        {
                            @foreach (WishlistItem item in ViewBag.WishlistItems)
                        {
                            <tr>
                                <td class="align-middle"><img src="~/assets/img/@item.Product.ProductImages.FirstOrDefault(p=>p.Primary==true)?.Name" alt="@item.Product.ProductImages.FirstOrDefault(p=>p.Primary==true)?.Alt" style="width: 50px;"> @item.Product.Name</td>
                                <td class="align-middle">@item.Price</td>
                                <td class="align-middle"><a asp-controller="Home" asp-action="Removewishlist" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></a></td>
                            </tr>
                        }
                        }
                        else

                        {
                         <tr>
                            <td class="align-middle"> <h4>There is no product in your Wishlist</h4></td>
                         </tr>              
                        }
                    }

                    else
                    { @if (ViewBag.WishlistItems!=null)
                        {
                            @foreach (WishlistItemVM item in ViewBag.WishlistItems)
                         {
                            <tr>
                                <td class="align-middle"><img src="~/assets/img/@item.Product.ProductImages.FirstOrDefault(p=>p.Primary==true)?.Name" alt="@item.Product.ProductImages.FirstOrDefault(p=>p.Primary==true)?.Alt" style="width: 50px;"> @item.Product.Name</td>
                                <td class="align-middle">@item.Price</td>
                                <td class="align-middle"><a asp-controller="Home" asp-action="Removewishlist" asp-route-id="@item.Product.Id" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></a></td>
                            </tr>
                         }
                        }
                        else

                        {
                         <tr>
                            <td class="align-middle"> <h4>There is no product in your Wishlist</h4></td>
                         </tr>              
                        }
                    }
                    </tbody>
                </table>
            </div>
            
        </div>
    </div>
    <!-- Cart End -->

